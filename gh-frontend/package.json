{
  "name": "gh-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --no-cache",
    "test-isolated": "jest -c=jest-isolated.config.ts --no-cache",
    "test-esm": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -c=jest-esm.config.ts --no-cache",
    "test-esm-isolated": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -c=jest-esm-isolated.config.ts --no-cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:report": "npx cypress run --reporter junit --reporter-options \"mochaFile=results/gh-frontend-output.xml,toConsole=true\"",
    "prepare": "husky",
    "lint:ts": "eslint 'src/**/*.{ts,js}'",
    "lint:css": "stylelint 'src/**/*.{css,scss}' --fix",
    "lint": "npm run lint:ts && npm run lint:css",
    "check:outdated": "ncu --format group && ncu --format json | jq '. | to_entries[] | select(.value.current != .value.latest)' && ncu -u || true"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/cdk": "^19.2.1",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.1",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@tailwindcss/postcss": "^4.0.9",
    "autoprefixer": "^10.4.20",
    "cypress-multi-reporters": "^2.0.5",
    "postcss": "^8.5.3",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.0.9",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@cypress/schematic": "^3.0.0",
    "@eslint/js": "^9.21.0",
    "@types/chai": "^5.0.1",
    "@types/cypress": "^1.1.6",
    "@types/jest": "^29.5.14",
    "cypress": "latest",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.5.3",
    "lint-staged": "^15.4.3",
    "npm-check-updates": "^17.1.15",
    "prettier": "^3.5.2",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.25.0"
  }
}
